package com.cg.product.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;


import com.cg.product.model.myProduct;
import com.cg.product.repo.ProductRepo;
@Component
public class ProductServicesImpl implements ProductServices{
	@Autowired
	private ProductRepo repo;

	@Override
	public myProduct add(myProduct products) {
		// TODO Auto-generated method stub
		repo.save(products);
		return products;
	}

	@Override
	public void delete(int pid) {
		// TODO Auto-generated method stub
		repo.deleteById(pid);

		
	}

	@Override
	public myProduct update(int pid, String productName) {
		// TODO Auto-generated method stub
		myProduct myProducts = repo.findById(pid).get();
		myProducts.setProductName(productName);
		return repo.save(myProducts);
		
	}

	@Override
	public myProduct getByid(int pid) {
		// TODO Auto-generated method stub
		myProduct myProducts = repo.findById(pid).get();
		return myProducts;
	}

}
